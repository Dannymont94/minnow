<h2></h2>

<article id="post" data-post-id="{{post.id}}">
  <button id="delete-post-btn"><img src="/icons/trash.png" alt="trash can" height="30px"></button>
  <div id="edit-post">
    <img src="{{post.path}}" alt="screenshot of {{post.source}}">
  </div>
  <br><br>
  <form id="edit-post-form">
    <label for="caption-input">New caption:</label>
    <input type="text" id="caption-input" value="{{post.caption}}" />
    <br><br>
    <button type="submit">Update</button>
  </form>
</article>

<p id="feedback"></p>

<script src="/javascript/edit-post.js"></script>