<h2></h2>

<article id="post" data-post-id="{{post.id}}">
  <button id="delete-post-btn"><img src="https://static.thenounproject.com/png/304-200.png" height="20px"></button>
  <div id="edit-post">
    <img src="{{post.path}}">
  </div>
  <br><br>
  <form id="edit-post-form">
    <label for="caption-input">New caption:</label>
    <input type="text" id="caption-input" value="{{post.caption}}" />
    <br><br>
    <button type="submit">Confirm Changes</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>