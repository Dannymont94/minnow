<h2>Your Posts</h2>

<section class="posts">
  {{#each posts as |post|}}
  <div class="content">
    <article class="post" data-post-id="{{post.id}}">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit This Post <img id="edit-arrow" src="/icons/arrow.png" /></a>
    </article>
  </div>
  {{/each}}
</section>

<script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>
<script src="/javascript/grid-resize.js"></script>
<script src="/javascript/favorite.js"></script>